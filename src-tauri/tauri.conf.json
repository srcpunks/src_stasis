{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "src_stasis",
  "version": "0.0.1",
  "identifier": "sh.srcpunks.srcstasis",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "src_stasis",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "licenseFile": "../LICENSE",
    "longDescription": "src_stasis is a cross-platform desktop/Android app enabling users to manage data on the Swarm decentralized network.",
    "shortDescription": "Data management app for the decentralized and censorship-resistant Swarm network"
  }
}
